#include <EgLang.h>

/*
  EgLang Basic Example
  
  Пины подключения:
  INPUT пины: 3, 5, 7, 9, 11, 13
  OUTPUT пины: 2, 4, 6, 8, 10, 12
  
  Примеры правил:
  - "2,1" - включить пин 2
  - "?3,0!4,1" - если пин 3 в LOW, то включить пин 4
  - "[3:8,1;8,0]" - пока пин 3 нажат, мигать пином 8
*/

AUTO_START
  // Простые команды
  R("2,1");        // Включить LED на пине 2
  R("4,0");        // Выключить пин 4
  
  // Условные правила
  R("?3,0!6,1");   // Если кнопка на пине 3 нажата (LOW), включить пин 6
  R("?5,0!8,1");   // Если кнопка на пине 5 нажата, включить пин 8
  
  // Циклы
  R("[7:10,1;10,0]"); // Пока кнопка на пине 7 нажата, мигать пином 10
  
  // AND условие
  R("?3,0&5,0!12,1"); // Если ОБЕ кнопки на пинах 3 И 5 нажаты, включить пин 12
AUTO_END
